/* pages/reserve/reserveInfo/reserveInfo.wxss */

.reserveInfo_bg {
    width: 100%;
    height: 100%;
    background: #fff;
    position: absolute;
    opacity: 0.4;
}

.bg-img {
    display: block;
    margin: auto;
}

.index-banner {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0rpx;
}

.swiper_item {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.reserveInfo_icon {
    width: 100%;
    height: 60rpx;
    display: flex;
    align-items: center;
    position: absolute;
    bottom: 70rpx;
}

.reserveInfo_icon_item {
    width: 25%;
    display: flex;
    flex-direction: column;
    align-items: center;
}