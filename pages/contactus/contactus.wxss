}
.add-info .desc{
  font-size: 26rpx;
  color: #969696;
}
.add-info .go-btn{
  font-size: 24rpx;
  color: #141414;
  padding-top: 10rpx;
}
.conus-box .box{
  padding-left: 20rpx;
  font-size: 26rpx;
