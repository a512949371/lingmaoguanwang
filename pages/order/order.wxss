.item-Info {
    flex: 1;
    color: #B0B0B0;
    border-bottom: 1px solid #F2F2F2;
}

.item-Info-last {
    color: #B0B0B0;
    flex: 1;
    padding-left: 20rpx;
}

.item-Info .history-name,
.item-Info-last .history-name {
    font-size: 30rpx;
    color: #000;
}

.item-Info .history-time,
.item-Info-last .history-time {
    font-size: 28rpx;
    color: #969696;
    padding: 10rpx 0;
}

.item-Info .history-num,
.item-Info-last .history-num {
    font-size: 30rpx;
    color: #646464;
}

.item-Info .history-price,
.item-Info-last .history-price {
    font-size: 32rpx;
    color: #1E1E1E;
    font-weight: bold;
}

.history-status {
    width: 120rpx;
    height: 100%;
    text-align: center;
    font-size: 32rpx;
    color: #646464;
    border-bottom: 1px solid #F2F2F2;
}

.tab-content {
    margin-top: 100rpx;
    width: 100%;
    z-index: 1;
    overflow: hidden;
}

.scoll-h {
    height: 100%;
    -webkit-overflow-scrolling: touch;
}