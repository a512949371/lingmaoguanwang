page {
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.flex-box{
  display: flex;
  align-items: center;
}
.flex-box-column{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction:column
}
.flex-box-btween{
  display: flex;
  align-items: center;
  justify-content: space-between
}
.flex-box-center{
  display: flex;
  align-items: center;
  justify-content: center
}
.flex-box-end{
  display: flex;
  align-items: center;
  justify-content: flex-end
}
.tab-h {
    height: 100rpx;
    width: 100%;
    box-sizing: border-box;
    border-bottom: 1px solid #F5F5F5;
    overflow: hidden;
    line-height: 100rpx;
    font-size: 34rpx;
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
    display: inline-flex;
    flex-flow: row wrap;
    justify-content: space-around;
    background: #FFF;
}

.tab-item {
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    text-align: center;
    justify-content: space-around;
    width: 25%;
    display: inline-block;
    color: #969696;
}

.tab-item.active {
    color: #1E1E1E;
    position: relative;
}

.tab-item.active:after {
    content: "";
    display: block;
    height: 10rpx;
    width: 76rpx;
    background: #1E1E1E;
    position: absolute;
    left: 30%;
    bottom: 0;
}

.item-history {
    width: 100%;
    display: flex;
    flex-grow: row no-wrap;
    justify-content: space-between;
    padding: 30rpx;
    padding-bottom: 0;
    box-sizing: border-box;
    height: 200rpx;
    align-items: center;
}

.order-list {
    border-bottom: 16px solid #F2F2F2;
    z-index: 1;
}

.scoll-h .order-id {
    font-size: 32rpx;
    padding: 20rpx 40rpx;
    color: #646464;
    border-bottom: 1px solid #f2f2f2;
}

.order-id .order-num {
  flex: 1
}


.order-id .order-status-Obligation {
    color: #FF6b4e;
}

.avatar .history-img {
  width: 108rpx;
  height: 108rpx;
}


