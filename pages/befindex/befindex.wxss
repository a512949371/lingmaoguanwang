/* pages/initpage/initpage.wxss */

page {
    width: 100%;
    height: 100%;
}

.initpage {
    width: 100%;
    height: 100%;
    background-image: url('http://zerocatimg.zhsjgroup.cn/initpage_bg.jpg');
    background-size: 100% 100%;
    display: flex;
    position: relative;
}

.initpagetext {
    position: absolute;
    top: 40rpx;
    right: 40rpx;
    width: 90rpx;
    height: 46rpx;
    border-radius: 20rpx;
}

.textbg {
    opacity: 0.3;
    background: #000;
}

.num {
    align-items: center;
    justify-content: center;
    opacity: 2;
    color: #fefefe;
    font-size: 32rpx;
    text-align: center;
}

.userbtn-box {
    height: 40px;
    line-height: 40px;
    position: fixed;
    left: 35%;
    right: 35%;
    bottom: 30px;
    font-size: 16px;
    background-color: rgba(255, 255, 255, 0.5);
    z-index: 99;
    border-radius: 10rpx;
}

.userbtn {
    height: 40px;
    line-height: 40px;
    position: fixed;
    left: 35%;
    right: 35%;
    bottom: 30px;
    font-size: 16px;
    background-color: transparent;
    color: #333;
    z-index: 100;
    border-radius: 10rpx;
}