  height: 6rpx;
  margin-left: 10rpx;
  background: url('http://zerocatimg.zhsjgroup.cn/point1.png') no-repeat center center;
  background-size: 100%;
}
/* 公司简介 */

.company-info {
    width: 100%;
    height: 492rpx;
    background: #F5F5F5;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.company-info .company-logo {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    margin-top: 125rpx;
}

.company-info .company-name {
    margin-top: 20rpx;
    font-size: 40rpx;
    font-weight: bold;
    color: #1E1E1E;
}



.company-info .company-description {
    margin-top: 18rpx;
    font-size: 30rpx;
    color: #646464;
    text-align: center;
    height: 70rpx;
    overflow: hidden;
    padding-left: 60rpx;
    padding-right: 60rpx;
    line-height: 70rpx;
}

.company-info .company-more {
    position: relative;
    width: 190rpx;
    height: 64rpx;
    border-radius: 64rpx;
    background-color: #C62E2E;
    font-size: 32rpx;
    font-weight: 500;
    color: #FFF;
    top: 30rpx;
    line-height: 62rpx;
    border: none;
    z-index: 99;
}


/* 服务优势 */

.company-service-close {
    width: 100%;
    height: 820rpx;
    padding-top: 90rpx;
    overflow: hidden;
    position: relative;
}

.company-service-open {
    width: 100%;
    height: 100%;
    padding-top: 90rpx;
    position: relative;
}

.company-service-close .company-service-list,
.company-service-open .company-service-list {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.service-list-item {
    padding-bottom: 70rpx;
    width: 235rpx;
    height: 345rpx;
    /* display: inline-block; */
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    text-align: center;
    justify-content: space-around;
    padding-left: 70rpx;
    padding-right: 70rpx;
}

.service-list-item image {
    width: 150rpx;
    height: 150rpx;
    border: 2rpx solid #F5F5F5;
    border-radius: 50%;
    display: block;
}

.service-list-item .list-item-title {
    width: 100%;
    margin-top: 40rpx;
    font-size: 28rpx;
    height: 40rpx;
    font-weight: bold;
    color: #1E1E1E;
}

.service-list-item .list-item-desc {
    width: 100%;
    margin-top: 20rpx;
    font-size: 22rpx;
    color: #969696;
    height: 86rpx;
    overflow-y: hidden;
}

.company-service-close .service-more-close,
.company-service-open .service-more-open {
    width: 100%;
    height: 64rpx;
    font-size: 32rpx;
    font-weight: 500;
    color: #FFF;
    line-height: 62rpx;
    border: none;
    z-index: 999;
}

.company-service-close .service-more-close {
    position: relative;
    bottom: 45rpx;
}

.company-service-open .service-more-open {
    position: relative;
}

.service-more-close image {
    transform: rotate(90deg);
    position: absolute;
    width: 26rpx;
    height: 46rpx;
    left: 50%;
    transition: .5s;
}

.service-more-open image {
    transform: rotate(270deg);
    position: relative;
    width: 26rpx;
    height: 46rpx;
    /* bottom: 64rpx; */
    left: 50%;
    transition: .5s;
}


