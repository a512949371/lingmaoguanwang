/* 首页轮播 */
.hotnews-box{
  padding: 20rpx 40rpx;
}
.hotnews-box .hotnews-tip{
  background: url('http://zerocatimg.zhsjgroup.cn/notice01.png') no-repeat center center;
  background-size: 100%;
  width: 70rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
