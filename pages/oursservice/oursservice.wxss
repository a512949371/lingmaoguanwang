/* pages/oursservice/oursservice.wxss */
.flex-box{
  display: flex;
  align-items: center;
}
.flex-box-column{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction:column
}
.flex-box-btween{
  display: flex;
  align-items: center;
  justify-content: space-between
}
.flex-box-center{
  display: flex;
  align-items: center;
  justify-content: center
}
.flex-box-end{
  display: flex;
  align-items: center;
  justify-content: flex-end
}
.top-bg{
  width: 710rpx;
  height: 260rpx;
  background:url('http://zerocatimg.zhsjgroup.cn/black.png') no-repeat top center;
  background-size: 100%;
  padding: 0 20rpx;
  position: relative
}
.order-box{
  position: absolute;
  top: 10rpx;
  right: 0;
  width: 127rpx;
  height: 54rpx;
  background: url('http://zerocatimg.zhsjgroup.cn/list.png') no-repeat center center;
  background-size: 100%;
  color: #ffe8c7;
  font-size: 24rpx;
  line-height: 54rpx;
}
.order-box .small-img{
  width: 12rpx;
  height: 22rpx;
  display: block;
  padding-left: 20rpx;
}
.top-bg .big-img{
  position: absolute;
  bottom: 0;
  width: 710rpx;
  height: 200rpx;
}
.reserve-store {
    width: 100%;
}
.verticalline{
  width: 4rpx;
  height: 30rpx;
  background-color: #C62E2E;
  margin-right: 20rpx;
}
.reserve-title {
    padding: 0 40rpx;
    margin-top: 60rpx;
    font-size: 36rpx;
    font-weight: bold;
    color: #1E1E1E;
}
.list-box{
  padding: 40rpx;
}
.list-box .list-data{
  padding: 30rpx 0;
}
.list-box .list-data-img{
  width: 200rpx;
  height: 274rpx;
}
.list-box .info-box{
  padding-left: 60rpx;
}
.list-box .info-name{
  font-size: 36rpx;
  color: #141414;
  font-weight: bold;
}
.list-box .infp-desc{
  font-size: 26rpx;
  color: #b4b4b4;
  padding-top: 20rpx;
}
.list-box .info-btn-box{
  padding-top: 20rpx;
}
.list-box .info-btn-box .info-btn{
  border: 1px solid #646464;
  padding: 10rpx 0;
  width: 160rpx;
  text-align: center;
  font-size: 26rpx;
  border-radius: 6rpx;
  color: #141414
}
.fixed-call{
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
}
.fixed-call image{
  width: 114rpx;
  height: 114rpx;
}