.content {
    width: 100%;
}

.title {
    width: 100%;
    padding: 30rpx;
    margin-top: 20rpx;
}

.title-main {
    font-size: 36rpx;
    display: block;
    font-weight: bold;
    color: #1E1E1E;
}

.title-des {
    margin-top: 10rpx;
    font-size: 26rpx;
    display: block;
    overflow: hidden;
    color: #969696;
}

.pro-main {
    padding: 40rpx;
    padding-top: 0;
    padding-bottom: 0;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
}

.pro-main .pro-list {
    border: 1px solid #ebebeb;
    border-radius: 10rpx;
    width: 200rpx;
    margin-bottom: 30rpx;
}

.pro-list .pro-type {
    display: block;
    font-size: 22rpx;
    height: 40rpx;
    width: 100%;
}

.pro-list .pro-type text {
    display: block;
    text-align: center;
    float: right;
    width: 90rpx;
    height: 38rpx;
    line-height: 36rpx;
    border-top-right-radius: 10rpx;
    background: #EBEBEB;
    color: #969696;
}

.pro-info {
    height: 220rpx;
    text-align: center;
}

.pro-info-num {
    margin-top: 4rpx;
    display: block;
    width: 100%;
    font-size: 38rpx;
    color: #646464;
}

.pro-info-price {
    margin-top: 10rpx;
    margin-bottom: 24rpx;
    display: block;
    width: 100%;
    font-size: 42rpx;
    color: #FF6B4E;
    font-weight: bold;
}

.pro-info-price .info-price-yen {
    font-size: 25rpx;
    font-weight: bold;
}

.pro-info-buy {
    display: block;
    width: 120rpx;
    font-size: 26rpx;
    padding: 0;
    height: 52rpx;
    line-height: 51rpx;
    background: #E3BE74;
    color: #FFF;
    border-radius: 50rpx;
    margin: auto;
    text-align: center;
}

.wxParse {
    margin: 30rpx;
    padding: 30rpx;
    background: #F2F2F2;
}


/* 弹窗 */

.modal-zerobox {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 999
}

.zero-shaw {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.7);
    z-index: 1000;
}

.modal-zero {
    position: fixed;
    top: calc(50% - 100px);
    left: 10%;
    right: 10%;
    background-color: #FFF;
    z-index: 9999;
    border-radius: 10px
}

.zero-top {
    top: 20%
}

.modal-zero .modal-title {
    padding: 10px 20px 10px 20px;
    font-size: 14px;
    margin-top: 10px;
    color: #000
}

.modal-zero .modal-content {
    padding: 5px 20px;
}

.modal-zero .modal-content .modal-input input {
    margin: 10px 0;
    background-color: #f5f5f5;
    border-radius: 5px;
    padding: 5px 10px;
    font-size: 24rpx;
}

.modal-zero .modal-footer {
    display: flex;
    justify-content: space-between;
    margin-top: 10px;
    border-top: 1px solid #e5e5e5
}

.modal-zero .modal-footer .btn-cancel {
    text-align: center;
    flex: 1;
    padding: 10px 0;
}

.modal-zero .modal-footer .btn-confirm {
    text-align: center;
    flex: 1;
    border-left: 1px solid #e5e5e5;
    padding: 10px 0;
    color: #00c200
}