/* template/banner/banner.wxss */
swiper{
  height: 250rpx;
}
.flex-box{
  display: flex;
  align-items: center;
}
.flex-box-column{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction:column
}
.flex-box-btween{
  display: flex;
  align-items: center;
  justify-content: space-between
}
.flex-box-center{
  display: flex;
  align-items: center;
  justify-content: center
}
.pt20{
  padding-top: 20rpx;
}
.pl20{
  padding-left: 20rpx;
}
.box{
  width: 100%;
  overflow: hidden;
}
.flex-box-end{
  display: flex;
  align-items: center;
  justify-content: flex-end
}
.reserve-box{
  box-sizing: border-box;
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center
}
.reserve-box .active{
  background: url('http://zerocatimg.zhsjgroup.cn/home-bg.png') no-repeat center center;
  background-size: contain;
  display: flex;
  transform: scale(1.1);
  transition:all .2s ease-in 0s;
}
.reserve-box .reserve-list{
  width: 508rpx;
  height: 133rpx;
  padding:40rpx;
  background: url('http://zerocatimg.zhsjgroup.cn/0.9bg.png') no-repeat center center;
  background-size: contain;
  display: flex
}
.reserve-img{
  width: 112rpx;
  height: 112rpx;
}
.reserve-box .title{
  font-size: 32rpx;
  font-weight: bold;
  color: #323232;
}
.reserve-box .flexone{
  flex: 1
}
.reserve-box .text{
  font-size: 24rpx;
  color: #b4b4b4;
  padding-top: 14rpx;
  height: 60rpx;
  line-height: 30rpx;
}